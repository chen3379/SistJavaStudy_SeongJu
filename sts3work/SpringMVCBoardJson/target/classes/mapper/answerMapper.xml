<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.answer.data.AnswerDao">
	<insert id="insertAnswer" parameterType="adto">
	insert into boardanswer (num,nickname,pass,content,writeday) values(#{num},#{nickname},#{pass},#{content},now())
	</insert>
	<select id="answerList" parameterType="int" resultType="adto">
	select * from boardanswer where num=#{num} order by idx
	</select>
	<select id="passCheckAnswer" parameterType="HashMap" resultType="int">
	select count(*) from boardanswer where pass=#{pass} and idx=#{idx}
	</select>
	<delete id="deleteAnswer" parameterType="int">
	delete from boardanswer where idx=#{idx}
	</delete>
</mapper>